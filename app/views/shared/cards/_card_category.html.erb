<div class="grid-card-category">
  <% elements.each do |category| %>
      <% image_url = case category
                   when category == "CafÃ©" then "app/assets/images/categories/cafe.jpg"
                   when category == "Bar" then "app/assets/images/categories/bar.jpg"
                   when category == "Parque" then "app/assets/images/categories/park.jpg"
                   when category == "Loja" then "app/assets/images/categories/loja.jpg"
                   when category == "Restaurante" then "app/assets/images/categories/restaurant.jpg"
                   when category == "Museu" then "app/assets/images/categories/museu.jpg"
                   end %>
                   <% raise %>
    <%= link_to locations_path(category: category, city: @city || nil, neighborhood: @neighborhood || nil), 
                                class: "card-category text-decoration-none",
                                style: "background-image: url('#{image_url}');" do %>
      <div class="card-category-content">
        <%= category %>
      </div>
    <% end %>
  <% end %>
</div>

