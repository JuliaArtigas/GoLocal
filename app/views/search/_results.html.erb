<div class="search-results">
  <div class="left-column">
    <h4>Cidades</h4>
    <div class="cities-search">
      <% @cities.each do |city| %>
        <%= link_to city.name, city, class: "tag-link" %>
      <% end %>
    </div>
    <h4>Bairros</h4>
    <div class="neighborhoods-search">
      <% @neighborhoods.each do |neighborhood| %>
        <%= link_to neighborhood.name, neighborhood, class: "tag-link" %>
      <% end %>
    </div>
  </div>
  <div class="middle-column">
    <h4>Eventos</h4>
    <div class="events-search">
      <% @events.each do |event| %>
        <%= link_to event.title, event, class: "tag-link" %>
      <% end %>
    </div>
  </div>
  <div class="right-column">
    <h4>Locais</h4>
    <div class="locations-search">
      <% @locations.each do |location| %>
        <%= link_to location.name, location, class: "tag-link" %>
      <% end %>
    </div>
  </div>
</div>
