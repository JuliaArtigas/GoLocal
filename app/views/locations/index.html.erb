
<div class="locations-container" style="display: flex;">

  <!-- Left: Location Cards -->
  <div class="location-list grid-card-sq-md" style="flex: 1;">
    <% @locations.each do |location| %>
      <div class="location-item card-sq-md" data-id="<%= location.id %>" data-lat="<%= location.latitude %>" data-lng="<%= location.longitude %>">
        <div class="card-sq-md-content">
          <%= link_to "#{location.name} - #{location.address}", "#", class: "location-link", data: { action: "mouseover->map#highlightMarker mouseout->map#unhighlightMarker", id: location.id } %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Right: Map -->
  <div class="location-map" style="flex: 2; width: 100%; height: 600px;" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
