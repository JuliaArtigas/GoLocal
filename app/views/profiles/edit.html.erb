<h3>Editar Perfil</h3>

<%= form_with(model: @user, url: profile_path, method: :patch) do |f| %>
  <div>
    <%= f.label :name, "Nome" %>
    <%= f.text_field :name, class: "form-control" %>
    <%= f.label :sobrenome, "Sobrenome" %>
    <%= f.text_field :sobrenome, class: "form-control" %>
    <%= f.label :email, "E-mail" %>
    <%= f.text_field :email, class: "form-control" %>
    <%= f.file_field :photo %>
  </div>

  <%= f.submit "Atualizar", class: "btn btn-primary" %>
<% end %>
