<section class="h-auto login-page">
  <div class="grid-login-page m-auto">
    <h3 class="m-auto mb-4 mt-5">Cadastre-se</h3 class="m-auto mb-4 mt-5">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs login-form m-auto"">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: "E-mail",
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    label: "Senha",
                    hint: ("MÃ­nimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirme sua senha",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="form-actions d-flex justify-content-center text-decoration-none mb-3">
        <%= f.button :submit, "Cadastrar", class: "btn-main" %>
      </div>
    <% end %>
    <div class="d-flex justify-content-center ml-3 mb-5">
      <p>jÃ¡ tem cadastro? <%= link_to "entrar", new_session_path(resource_name), class: "text-decoration-none" %></p>
    </div>
  </div>
</section>
