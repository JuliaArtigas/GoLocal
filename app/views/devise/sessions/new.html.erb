<section class="h-auto login-page">
  <div class="grid-login-page m-auto">
    <div class="login-background d-flex justify-content-center">
        <%= image_tag "logo-wh.svg", class: "my-4", style: "height: 96px;"%>
    </div>
    <h3 class="m-auto mb-4 mt-5">Acesse sua conta</h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <%# inputs --------------------------- %>
      <div class="form-inputs login-form m-auto">
        <%= f.input :email,
                          required: false,
                          label: 'E-mail',
                          autofocus: true,
                          input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                          required: false,
                          label: 'Senha',
                          input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <%# submit--------------------------- %>
      <div class="form-actions d-flex justify-content-center text-decoration-none mb-3">
        <%= f.button :submit, "Entrar", class: "btn-main" %>
      </div>
    <% end %>
    <%# forgot password --------------------------- %>
    <%= link_to "esqueci a senha", new_password_path(resource_name), class: "d-flex justify-content-center text-decoration-none" %>
    <%# register --------------------------- %>
    <div class="d-flex justify-content-center ml-3 mb-3">
      <p class="text-muted">n√£o tem conta?</p>
      <span style="margin-left: 8px;"><%= link_to "cadastre-se", new_registration_path(resource_name), class: "text-decoration-none" %></span>
    </div>
  </div>
</section>
